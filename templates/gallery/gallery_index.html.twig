{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Galleries{% endblock %}

{% block breadcrumbs %}
  {{ bootstrap_breadcrumbs(
    bootstrap_breadcrumb(bootstrap_icon('images') ~ ' Galleries', 'gallery_index'),
  ) }}
{% endblock %}

{% set can_create_gallery = is_granted(attributes.gallery.create, new_gallery) %}

{% set create_gallery_href = path('gallery_create') %}

{% block actions %}
  {% if can_create_gallery %}
    <a href="{{ create_gallery_href }}" class="btn btn-primary">
      {{ bootstrap_icon('plus-lg') }}
      Add Gallery
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Galleries</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(pagination.count) }}
        </div>
      </div>

      {{ form_start(search_form) }}
        <div class="row align-items-end">
          <div class="col-lg-6 col-sm-12">
            {{ form_row(search_form.search) }}
          </div>
          <div class="col-lg-12 col-sm-12">
            <button class="btn btn-outline-dark mb-3" type="submit">Search</button>
            <a class="btn btn-secondary mb-3" href="{{ path('gallery_index') }}">Reset</a>
          </div>
        </div>
      {{ form_end(search_form) }}

      {% if pagination.count %}
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Photos</th>
              <th>Shortcode</th>
              <th>Last Updated</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {% for gallery in pagination.results %}
              {{ _self.table_row(gallery, attributes) }}
            {% endfor %}
          </tbody>
        </table>

        {{ bootstrap_pagination(pagination) }}

        <small>{{ bootstrap_pagination_info(pagination) }}</small>
      {% else %}
        <p>
          No galleries found.
          {% if can_create_gallery %}
            <a href="{{ create_gallery_href }}">Click here to add a gallery.</a>
          {% endif %}
        </p>
      {% endif %}
    </div>
  </div>
{% endblock %}

{% macro table_row(gallery, attributes) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.gallery.view, gallery) %}
    {% set row_actions = row_actions|merge([{
      route: 'gallery_view',
      route_params: {id: gallery.id},
      color: 'outline-dark',
      icon: 'eye',
      text: 'View Gallery',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.gallery.edit, gallery) %}
    {% set row_actions = row_actions|merge([{
      route: 'gallery_edit',
      route_params: {id: gallery.id},
      color: 'secondary',
      icon: 'pencil',
      text: 'Edit Gallery',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.gallery.delete, gallery) %}
    {% set row_actions = row_actions|merge([{
      route: 'gallery_delete',
      route_params: {id: gallery.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete Gallery',
      confirm: 'Are you sure you want to delete this gallery? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  <tr>
    <td>{{ gallery.name }}</td>
    <td>{{ gallery.photos|length }}</td>
    <td>{{ shortcode('gallery(' ~ gallery.id ~ ')') }}</td>
    <td>{{ gallery.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
